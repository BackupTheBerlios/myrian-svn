#!/bin/sh

if [ -z "$1"]; then
    script=`basename $0`
    echo "Usage:"
    echo "   $script <jre-args>"
    echo "Example:"
    echo "   $script com.redhat.persistence.TestRunner com.redhat.persistence.jdotest.SimpleTest"
    exit 1
fi

function extend() {
    for word in $*; do
        if [ -z $CLASSPATH ]; then
            CLASSPATH=$word
        else
            CLASSPATH=$CLASSPATH:$word
        fi
    done
}

if [ -z $BUILD ]; then
	BUILD=build
fi

extend lib/*.jar lib/*.zip conf
extend `find $BUILD -name "*.jmake" | sed s/\\.jmake\$//g`
extend `find $BUILD -name "*.jmake" | sed s/\\.jmake\$//g | sed s%^$BUILD/%%g`
if [ ! -z $VERBOSE ]; then
	echo $CLASSPATH
fi

exec java "$@"

