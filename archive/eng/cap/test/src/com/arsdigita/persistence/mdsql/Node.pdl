model mdsql;

object type Node {
    BigDecimal[1..1] id = t_nodes.node_id INTEGER;
    String name = t_nodes.name VARCHAR(200);
    Node[0..1] parent = join t_nodes.parent_id to t_nodes.node_id;
    Node[0..n] children = join t_nodes.node_id to t_nodes.parent_id;

    object key(id);
}